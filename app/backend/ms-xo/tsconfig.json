{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"rootDir": "./src",
		"moduleResolution": "node",
		// "baseUrl": "./src",
		"types": ["node"],
		"resolveJsonModule": true,
		"outDir": "./dist",
		"rootDirs": ["./src"],
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		/* Type Checking */
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
