{
	"policy": {
		"phases": {
			"hot": {
				"actions": {
					"rollover": {
						"max_size": "30gb",
						"max_age": "7d"
					}
				}
			},
			"warm": {
				"min_age": "7d",
				"actions": {
					"shrink": { "number_of_shards": 1 },
					"forcemerge": { "max_num_segments": 1 }
				}
			},
			"delete": {
				"min_age": "30d",
				"actions": {
					"delete": {}
				}
			}
		}
	}
}
